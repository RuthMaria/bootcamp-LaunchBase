{% extends 'layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="styles/index.css">
    <title>Home</title>
{% endblock head %}

{% block content %}
    <div class="card table-container">
        <table width="100%">
            <thead>
                <tr>
                    <th>Nome completo</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for teacher in teachers %} 
                    <tr>                                       
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>
                            {{ teacher.fullname }}
                        </td>
                        <td>{{ teacher.occupation_area }}</td>
                        <td><a href="/teachers/{{teacher.id}}">ver</a></td>                    
                    </tr>
                {% endfor %}
            </tbody>
        </table>        
    </div>
{% endblock content %}