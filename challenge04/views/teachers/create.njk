{% extends 'layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/create.css">
    <title>Home</title>
{% endblock head %}

{% block content %}
    <form class="card" action="/teachers" method="post">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/8874679/500x500) no-repeat center center / cover"></section>
       
        <section class="details">
            <div class="item">
                <div>Avatar</div>
                <div><input type="url" name="avatar_url"  placeholder="https://"></div>
            </div>

            <div class="item">
                <div>Nome completo</div>
                <div><input type="text" name="fullname" placeholder="Nome completo do professor"></div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div><input type="date" name="birth"></div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="education_level">
                        <option value=""> Selecione o grau de escolaridade... </option>
                        <option value="medium">Ensino Médio Completo</option>
                        <option value="graduation">Ensino Superior Completo</option>
                        <option value="master">Mestrado</option>
                        <option value="doctorate">Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="classes" value="Presencial">Presencial</span>
                    <span><input type="radio" name="classes" value="Distância">Distância</span>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação </div>
                <div><input type="text" name="occupation_area" placeholder="Separe as disciplinas lecionadas por vírgula"></div>
            </div>

            <button type="submit" class="button"> Salvar </button>
        </section>
    </form>
{% endblock content %}