<div class="item">
    <div>Imagem da receita</div>
    <input type="url" name="image"  placeholder="https://" value = "{{recipe.image}}">
</div>

<div class="item">
    <div> Nome da receita</div>
    <input type="text" name="title" value = "{{recipe.title}}">
</div>

<div class="item">
    <div> Autor </div>
    <input type="text" name="author" value = "{{recipe.author}}">
</div>

<div class="item ingredients">    
    <div>Ingredientes</div>
    <div class="ingredient">
        <input type="text" name="ingredients[]" value = "{{recipe.ingredients}}">
    </div>
</div>

<div class="item">
    <span class="add-ingredient">Adicionar novo Ingrediente</span>
</div>

<div class="item preparations">
    <div> Modo de preparo </div>
    <div class="preparation">
        <input type="text" name="preparation[]" value = "{{recipe.preparation}}">
    </div>
</div>

<div class="item">
    <span class="add-preparation">Adicionar novo passo</span>
</div>

<div class="item">
    <div>informações adicionais</div>
    <textarea name="information" cols="30" rows="10">{{recipe.information}}</textarea>
</div>
