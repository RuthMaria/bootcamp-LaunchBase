{% extends 'layoutAdmin.njk' %}

{% block head %}
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/create.css">
    <title>Receitas</title>
{% endblock head %}

{% block content %}      

    <div class="titles">
        <h1>Editar Receita</h1>
        <div>
            <button form="second_form" type="submit" class="newRecipes delete">Deletar</button> 
            <button form="first_form" type="submit" class="newRecipes">Salvar receita </button> 
        </div> 
    </div>    

    <form id="first_form" action="/admin/recipes?_method=PUT" method="post" class="fields">
        {% include 'admin/fields.njk' %}        
        <input type="hidden" name="id" value={{ id }}> 
    </form>            

    <form id="second_form" action="/admin/recipes?_method=DELETE" method="post">
        <input type="hidden" name="id" value={{ id }}>
    </form>
  
{% endblock content %}