{% extends 'layoutUser.njk' %}

{% block head %}
    <link rel="stylesheet" href="styles/modal.css">
    <title>Receitas</title>
{% endblock head %}

{% block content %}
    <section class="cards">      
        {% for recipe in recipes %}        
            <a class="card" href="/recipes/{{recipe.id}}">
                <figure>
                    <img src="{{recipe.image}}" alt="{{recipe.title}}" class="img">
                    <figcaption>
                        <p class="recipe_title">{{recipe.title}}</p>
                        <p class="author">{{recipe.author}}</p>
                    </figcaption>
                </figure>          
            </a>
        {% endfor %} 
    </section>    
{% endblock content %}