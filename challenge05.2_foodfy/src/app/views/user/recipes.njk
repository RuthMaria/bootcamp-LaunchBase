{% extends 'layoutUser.njk' %}

{% block head %}
    <title>Receitas</title>
{% endblock head %}

{% block content %}
    <section class="cards">      
        {% for recipe in recipes %}        
            <a class="card" href="/recipes/{{recipe.id}}">
                <figure>
                    <img src="{{recipe.image}}" alt="{{recipe.title}}" class="img">
                    <figcaption>
                        <p class="recipe_title">{{recipe.title}}</p>
                        <p class="author">por {{recipe.author}}</p>
                    </figcaption>
                </figure>          
            </a>
        {% endfor %} 
    </section>  
    
    <div class="pagination" 
    data-page="{{pagination.page}}"
    data-total="{{pagination.totalPages}}" 
    data-filter={{filter}}>
            
    </div>
    <script src="../../../scripts/pagination.js"></script>

{% endblock content %}