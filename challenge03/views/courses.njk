{% extends 'layout.njk' %}

{% block head %}
    <link rel="stylesheet" href="styles/courses.css">
    <title>Conte√∫do</title>
{% endblock head %}
    
{% block content %}
    <section class="cards">
        {% for course in courses %}        
            <div class="card" id="{{course.id_01}}">      
                <span class="card_numbers" id="{{course.id_02}}">{{course.course_number}}</span>     

                <div class="card_image">
                    <img src="{{course.imagem_url}}" alt="Curso {{course.id_01}}">
                </div>
                
                <div class="card_content">
                    <p>{{course.content}}</p>
                </div>

                <div class="card-modules">
                    <p> {{course.modules}} </p>
                    <p class="card-price" id="{{course.id_04}}">{{course.price}}</p>
                </div>

                <div class="card_info" id="{{course.id_05}}">
                    <p>{{course.class}}</p>
                </div>
            </div>
        {% endfor %}
    </section>

    <div class="modal_overlay">
       <div class="modal" class="maximize">
            <a id="max-modal">
               <i class="material-icons">check_box_outline_blank</i>
            </a>

            <a id="close-modal">
                <i class="material-icons">close</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="scripts/courses.js"></script>
{% endblock content %}
